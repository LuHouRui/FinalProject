@model List<Core.Models.Customer>

@{
    ViewData["Title"] = "客戶清單";
}

<h2>客戶清單</h2>
    <form action="/Customer/Search">
        <p>
            <input type="search" name="search" value="" /> <input type="submit" value="查詢客戶" />
        </p>
    </form>
    
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>客戶編號</th>
            <th>@Html.ActionLink("客戶名稱", "Index", new { sortby = ViewBag.NameSortParm })</th>
            <th>@Html.ActionLink("統一編號", "Index", new { sortby = ViewBag.NumberSortParm })</th>
            <th>@Html.ActionLink("鄉鎮市區", "Index", new { sortby = ViewBag.CitySortParm })</th>
            <th>@Html.ActionLink("縣市", "Index", new { sortby = ViewBag.CountrySortParm })</th>
            <th>@Html.ActionLink("郵遞區號", "Index", new { sortby = ViewBag.MailNumSortParm })</th>
            <th></th>
            <th></th>
            <th align="right"><a class="btn btn-default" href="/Customer/Create">新增</a></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>@item.Id</td>
            <td>@item.客戶編號</td>
            <td>@item.客戶名稱</td>
            <td>@item.統一編號</td>
            <td>@item.鄉鎮市區</td>
            <td>@item.縣市</td>
            <td>@item.郵遞區號</td>
            <td>
                <a class="btn btn-primary" href="/Customer/Details/@item.Id">詳細</a>
            </td>
            <td>
                <a class="btn btn-warning" href="/Customer/Edit/@item.Id">編輯</a>
            </td>
            <td>
                <a class="btn btn-danger" href="/Customer/Delete/@item.Id">刪除</a>
            </td>
        </tr>
        }


    </tbody>
</table>